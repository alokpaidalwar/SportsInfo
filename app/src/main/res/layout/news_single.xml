<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_elevation"
    app:cardBackgroundColor="@color/colorCardBackground"
    app:cardCornerRadius="@dimen/cardview_cornerradius"
    android:layout_margin="@dimen/cardview_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_icon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/imgnotfound"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_tsize_title"
            android:textStyle="bold"
            android:layout_margin="@dimen/news_margin_title"
            android:layout_below="@id/news_icon"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/news_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_tsize_title"
            android:textStyle="italic"
            android:layout_margin="@dimen/news_margin_title"
            android:fontFamily="@font/adam"
            android:layout_below="@id/news_title"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>