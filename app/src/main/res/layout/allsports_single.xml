<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_elevation"
    app:cardBackgroundColor="@color/colorCardBackground"
    app:cardCornerRadius="@dimen/cardview_cornerradius"
    android:layout_margin="@dimen/cardview_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/allsport_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>


            <TextView
                android:id="@+id/allsport_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/allsports_tsize_title"
                android:textStyle="bold"
                android:layout_margin="@dimen/allsports_margin_title"
                android:fontFamily="@font/adam"
                android:layout_below="@id/allsport_icon"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/allsport_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/allsport_icon"
                android:layout_margin="@dimen/allsports_margin_details"
                android:src="@drawable/info" />

    </RelativeLayout>
</android.support.v7.widget.CardView>